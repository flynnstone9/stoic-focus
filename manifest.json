{
    "name": "Stoic Focus",
    "author": "Connor Flynn",
    "version": "1.0",
    "description": "Add personal popups on websites to remind yourself why you may want to be mindful of visiting that page.",
    "permissions": ["storage", "activeTab", "tabs", "<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["./styles/content.css"],
            "js": ["contentScript.js"],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "views/popup.html",
        "default_icon": {
            "16": "images/stoic16.png",
            "32": "images/stoic32.png",
            "48": "images/stoic64.png",
            "128": "images/stoic128.png"
        }
    },
    "icons": {
        "16": "images/stoic16.png",
        "32": "images/stoic32.png",
        "48": "images/stoic64.png",
        "128": "images/stoic128.png"
    },
    "web_accessible_resources": [
        "images/stoic128.png",
        "views/display.html",
        "styles/content.css",
        "services/timer.js"
    ],
    "applications": {
        "gecko": {
            "id": "connormflynn@gmail.com",
            "strict_min_version": "53.0"
        }
    },
    "manifest_version": 2
}
